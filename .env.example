# ========================================
# ALPHA VANTAGE INTEGRATION CONFIGURATION
# ========================================

# Alpha Vantage API Configuration
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
ALPHA_VANTAGE_RATE_LIMIT=5

# Alpha Vantage Data Collection Settings
DEFAULT_TIER=mega
INCLUDE_OPTIONS_DATA=true
INCLUDE_TECHNICAL_INDICATORS=true
INCLUDE_NEWS_SENTIMENT=true

# Rate Limiting and Performance for Alpha Vantage
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
BACKOFF_FACTOR=2

# Alpha Vantage Logging
ALPHA_VANTAGE_LOG_LEVEL=INFO
ALPHA_VANTAGE_LOG_FILE=./docs/alpha_vantage_ingestion.log